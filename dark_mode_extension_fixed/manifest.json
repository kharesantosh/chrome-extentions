{
  "manifest_version": 3,
  "name": "Dark/Light Mode Switcher",
  "version": "1.0",
  "description": "Toggle between dark and light modes on any website",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dark/Light Mode Switcher"
  }
}